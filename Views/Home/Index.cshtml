    <div id="products">
        <h2>Casual Books</h2>
        <div class="container mt-5">
            <div class="row" style="margin-bottom: 30px;">
                @foreach(var item in Model)
                {
                    <div class="col-md-3">
                        <div class="card shadow custom-card" style="margin-bottom: 100px;">
                            <a asp-action="Details" asp-route-id="@item.BookId"><img style="width: 100%;height:400px;" src="~/images/@item.Img1" alt="" class="card-img-top w-100 custom-bg" /></a>
                            <div class="card-body">
                                <a asp-action="Details" asp-route-id="@item.BookId"><div class="card-title">@item.Title</div></a>
                            </div>

                            <div class="card-footer custom-footer">
                                <div class="float-start">
                                    <h4 class="text-danger">
                                        @item.Price $
                                    </h4>
                                </div>
                                <div class="float-end">
                                <button class="btn btn-primary rounded-3 custom-btn">
                                    <a asp-controller="Home" asp-action="addCart" asp-route-id="@item.BookId">
                                        <i class="fas fa-shopping-cart"></i>BUY NOW
                                    </a>    
                                </button>
                                </div>
                            </div>
                        </div>
                    </div>       
                }
            </div>
        </div>
