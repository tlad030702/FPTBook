@model FPTBook.Models.ApplicationUser
@{
    Layout = "DashBoard";
}
@{
    ViewData["Title"] = "Update";
}
@if (User.Identity.IsAuthenticated && User.IsInRole("Administrator"))
{
    <h1>Reset password</h1>

    <h4>FPT BOOK </h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-controller="Admin" asp-action="Update" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    @*<label type = "hidden" asp-for="Id" class="control-label"></label>*@
                    <input type="hidden" asp-for="Id" class="form-control" />

                </div>
                <div class="form-group">
                    <label asp-for="FirstName" readonly class="control-label"></label>
                    <input asp-for="FirstName" readonly class="form-control" />
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="LastName" readonly class="control-label"></label>
                    <input asp-for="LastName" readonly class="form-control" />
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="UserName" readonly class="control-label"></label>
                    <input asp-for="UserName" readonly class="form-control" />
                    <span asp-validation-for="UserName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Email" readonly class="control-label"></label>
                    <input asp-for="Email" readonly class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Address" readonly class="control-label"></label>
                    <input asp-for="Address" readonly class="form-control" />
                    <span asp-validation-for="Address" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label class="control-label">New Password</label>
                    <input asp-for="PasswordHash" type="password" value="@ViewData["NewPass"]" name="newpass" class="form-control" />
                </div>


                <div class="form-group">
                    <label class="control-label">Confirm Password</label>
                    <input asp-for="PasswordHash" type="password" value="@ViewData["ConfirmPass"]" name="confirmpass" class="form-control" />
                    <span class="text-danger">@ViewBag.Error1</span>
                </div>

                <div>
                    <br>
                </div>
                <div class="form-group">
                    <input type="submit" value="Update" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
    <br>
    <div>
        <a asp-controller="Admin" asp-action="Reset">Back to List</a>
    </div>
}
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
